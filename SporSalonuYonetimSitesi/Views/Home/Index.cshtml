@{
    ViewData["Title"] = "Anasayfa";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="container mt-4">

        <div class="row mb-4">
            <div class="col-12">
                <div class="p-5 bg-light rounded-3 shadow-sm border-start border-5 border-primary">
                    <h1 class="display-5 fw-bold text-dark">Hoşgeldin,</h1>
                    <h2 class="text-primary">@User.Identity.Name</h2>
                    <p class="lead mt-3">
                        Spor salonu yönetim panelindesin. Yapmak istediğin işlemi aşağıdan seçebilirsin.
                    </p>
                </div>
            </div>
        </div>

        <div class="row g-4">

            @if (User.IsInRole("Admin"))
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow border-0 hover-card">
                        <div class="card-body text-center p-4">
                            <div class="display-4 text-danger mb-3">⚡</div>
                            <h4 class="card-title fw-bold">Randevu Yönetimi</h4>
                            <p class="card-text text-muted">Gelen randevuları onayla veya reddet.</p>
                            <a href="/Randevu/TumRandevular" class="btn btn-danger w-100 stretched-link">Yönet</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 shadow border-0 hover-card">
                        <div class="card-body text-center p-4">
                            <div class="display-4 text-dark mb-3">🏋️‍♂️</div>
                            <h4 class="card-title fw-bold">Antrenörler</h4>
                            <p class="card-text text-muted">Antrenör ekle, düzenle veya sil.</p>
                            <a href="/Antrenor/Index" class="btn btn-dark w-100 stretched-link">Listele</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 shadow border-0 hover-card">
                        <div class="card-body text-center p-4">
                            <div class="display-4 text-primary mb-3">🧘‍♀️</div>
                            <h4 class="card-title fw-bold">Hizmetler</h4>
                            <p class="card-text text-muted">Salon hizmetlerini ve fiyatları yönet.</p>
                            <a href="/Hizmet/Index" class="btn btn-primary w-100 stretched-link">Listele</a>
                        </div>
                    </div>
                </div>
            }

            else
            {
                <div class="col-md-6">
                    <div class="card h-100 shadow border-0 hover-card bg-primary text-white">
                        <div class="card-body text-center p-5">
                            <div class="display-1 mb-3">📅</div>
                            <h3 class="card-title fw-bold">Yeni Randevu Al</h3>
                            <p class="card-text text-white-50">Hemen müsait bir antrenör bul ve rezervasyon yap.</p>
                            <a href="/Randevu/Al" class="btn btn-light text-primary fw-bold w-100 stretched-link">Randevu Al</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100 shadow border-0 hover-card bg-warning">
                        <div class="card-body text-center p-5">
                            <div class="display-1 mb-3 text-dark">📋</div>
                            <h3 class="card-title fw-bold text-dark">Randevularım</h3>
                            <p class="card-text text-dark-50">Geçmiş ve gelecek randevularını kontrol et.</p>
                            <a href="/Randevu/Index" class="btn btn-dark w-100 stretched-link">Görüntüle</a>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
}

else
{
    <div class="p-5 mb-4 bg-light rounded-3 text-center shadow-sm">
        <div class="container-fluid py-5">
            <h1 class="display-3 fw-bold">Hoşgeldiniz!</h1>
            <p class="col-md-8 fs-4 mx-auto text-muted">
                GymPro ile sağlıklı yaşama ilk adımı atın. Randevularınızı planlayın, antrenörlerinizi seçin ve gelişiminizi takip edin.
            </p>
        </div>
    </div>

    <div class="container">
        <div class="row align-items-center justify-content-center">

            <div class="col-md-5 mb-4">
                <div class="card h-100 shadow border-0 hover-effect">
                    <div class="card-body text-center p-5">
                        <div class="mb-3"><span style="font-size: 3rem;">🔒</span></div>
                        <h2 class="card-title fw-bold text-dark">Yönetici Girişi</h2>
                        <p class="card-text text-muted">Personel ve sistem yönetimi paneli.</p>
                        <a href="/Hesap/Giris?tip=Admin" class="btn btn-dark btn-lg w-100 mt-3">Yönetici Girişi Yap</a>
                    </div>
                </div>
            </div>

            <div class="col-md-5 mb-4">
                <div class="card h-100 shadow border-0 hover-effect" style="background-color: #f8f9fa;">
                    <div class="card-body text-center p-5">
                        <div class="mb-3"><span style="font-size: 3rem;">💪</span></div>
                        <h2 class="card-title fw-bold text-primary">Üye Girişi</h2>
                        <p class="card-text text-muted">Randevu alma ve profil işlemleri.</p>
                        <a href="/Hesap/Giris?tip=Uye" class="btn btn-primary btn-lg w-100 mt-3">Üye Girişi Yap</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .hover-effect {
        transition: transform 0.3s ease;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
        }

    .hover-card {
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2) !important;
        }
</style>