@model SporSalonuYonetimSitesi.Models.KayitViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container mt-5 col-md-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white"><h4>Kayıt Ol</h4></div>
        <div class="card-body">
            <form method="post">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="mb-3"><label>Ad</label><input asp-for="Ad" class="form-control" /></div>
                <div class="mb-3"><label>Soyad</label><input asp-for="Soyad" class="form-control" /></div>
                <div class="mb-3"><label>Email</label><input asp-for="Email" class="form-control" /></div>
                <div class="mb-3"><label>Şifre</label><input asp-for="Sifre" type="password" class="form-control" /></div>
                <div class="mb-3"><label>Şifre Tekrar</label><input asp-for="SifreTekrar" type="password" class="form-control" /></div>
                <button type="submit" class="btn btn-success w-100">Kayıt Ol</button>
            </form>
        </div>
    </div>
</div>