@model SporSalonuYonetimSitesi.Models.KayitViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <div class="text-center mb-4">
                <h1 class="display-4 fw-bold text-success">Gym<span class="text-dark">Pro</span></h1>
                <p class="lead">Aramıza Katılın</p>
            </div>

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-success text-white p-4 text-center">
                    <h3 class="mb-0"><i class="bi bi-person-plus-fill"></i> Üye Kaydı</h3>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div class="text-danger mb-3" asp-validation-summary="All"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Ad" class="form-control" placeholder="Ad" />
                                    <label>Ad</label>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Soyad" class="form-control" placeholder="Soyad" />
                                    <label>Soyad</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <label>Email Adresi</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Sifre" type="password" class="form-control" placeholder="Şifre" />
                            <label>Şifre</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="SifreTekrar" type="password" class="form-control" placeholder="Şifre Tekrar" />
                            <label>Şifre Tekrar</label>
                        </div>

                        <button type="submit" class="btn btn-success w-100 btn-lg shadow-sm">Kayıt Ol</button>
                    </form>
                </div>
                <div class="card-footer text-center py-3 bg-light">
                    <small class="text-muted">Zaten hesabın var mı? <a href="/Hesap/Giris?tip=Uye" class="text-decoration-none fw-bold text-success">Giriş Yap</a></small>
                </div>
            </div>

            <div class="text-center mt-3">
                <a href="/" class="text-secondary text-decoration-none">← Anasayfaya Dön</a>
            </div>

        </div>
    </div>
</div>