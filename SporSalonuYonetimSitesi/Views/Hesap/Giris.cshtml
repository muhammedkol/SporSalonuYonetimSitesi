@model SporSalonuYonetimSitesi.Models.GirisViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5 col-md-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white"><h4>Giriş Yap</h4></div>
        <div class="card-body">
            <form method="post">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="mb-3"><label>Email</label><input asp-for="Email" class="form-control" /></div>
                <div class="mb-3"><label>Şifre</label><input asp-for="Sifre" type="password" class="form-control" /></div>
                <div class="mb-3 form-check">
                    <input asp-for="BeniHatirla" class="form-check-input" />
                    <label class="form-check-label">Beni Hatırla</label>
                </div>
                <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
            </form>
        </div>
    </div>
</div>