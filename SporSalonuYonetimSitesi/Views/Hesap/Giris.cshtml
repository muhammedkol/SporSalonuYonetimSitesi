@model SporSalonuYonetimSitesi.Models.GirisViewModel

@{
    // Controller'dan gelen "tip" bilgisini alıyoruz
    string girisTipi = ViewBag.Tip;

    // Tasarım renklerini tipe göre belirliyoruz
    string baslik = girisTipi == "Admin" ? "Yönetici Girişi" : "Üye Girişi";
    string kartRengi = girisTipi == "Admin" ? "bg-dark text-white" : "bg-primary text-white";
    string butonRengi = girisTipi == "Admin" ? "btn-dark" : "btn-primary";

    ViewData["Title"] = baslik;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <div class="text-center mb-4">
                <h1 class="display-4 fw-bold text-primary">Gym<span class="text-dark">Pro</span></h1>
                <p class="lead">Spor Salonu Yönetim Sistemi</p>
            </div>

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header @kartRengi p-4 text-center">
                    <h3 class="mb-0"><i class="bi bi-person-circle"></i> @baslik</h3>
                </div>

                <div class="card-body p-4">
                    <form method="post">
                        <input type="hidden" name="tip" value="@ViewBag.Tip" />
                        <div class="text-danger mb-3" asp-validation-summary="All"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <label>Email Adresi</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Sifre" type="password" class="form-control" placeholder="Şifre" />
                            <label>Şifre</label>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="BeniHatirla" class="form-check-input" />
                            <label class="form-check-label text-secondary">Beni Hatırla</label>
                        </div>

                        <button type="submit" class="btn @butonRengi w-100 btn-lg shadow-sm">Giriş Yap</button>
                    </form>
                </div>

                @if (girisTipi != "Admin")
                {
                    <div class="card-footer text-center py-3 bg-light">
                        <small class="text-muted">Hesabın yok mu? <a href="/Hesap/Kayit" class="text-decoration-none fw-bold">Kayıt Ol</a></small>
                    </div>
                }
            </div>

            <div class="text-center mt-3">
                <a href="/" class="text-secondary text-decoration-none">← Anasayfaya Dön</a>
            </div>

        </div>
    </div>
</div>