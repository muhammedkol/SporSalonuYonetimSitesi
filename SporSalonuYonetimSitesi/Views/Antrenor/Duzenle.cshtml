@model SporSalonuYonetimSitesi.Varliklar.Antrenor
@{
    ViewData["Title"] = "Antrenör Düzenle";
}

<div class="container mt-5 col-md-6">
    <h3>Antrenör Düzenle</h3>
    <form method="post">
        <input type="hidden" asp-for="AntrenorId" />
        <div class="alert alert-danger" asp-validation-summary="All"></div>

        <div class="mb-3">
            <label>Ad Soyad</label>
            <input type="text" class="form-control" asp-for="AdSoyad" required />
        </div>
        <div class="mb-3">
            <label>Uzmanlık Alanı</label>
            <input type="text" class="form-control" asp-for="UzmanlikAlani" required />
        </div>
        <div class="mb-3">
            <label class="fw-bold">Verebileceği Hizmetler:</label>
            <div class="card p-3">
                @foreach (var hizmet in (List<SporSalonuYonetimSitesi.Varliklar.Hizmet>)ViewBag.TumHizmetler)
                {
                    bool isChecked = Model.Hizmetler.Any(h => h.HizmetId == hizmet.HizmetId);

                    <div class="form-check">
                        <input class="form-check-input"
                               type="checkbox"
                               name="secilenHizmetIds"
                               value="@hizmet.HizmetId"
                               id="h_@hizmet.HizmetId"
                        @(isChecked ? "checked" : "") /> <label class="form-check-label" for="h_@hizmet.HizmetId">
                            @hizmet.HizmetAdi
                        </label>
                    </div>
                }
            </div>
        </div>
        <div class="mb-3">
            <label>Çalışma Saatleri</label>
            <input type="text" class="form-control" asp-for="CalismaSaatleri" />
        </div>

        <button type="submit" class="btn btn-warning">Güncelle</button>
        <a href="/Antrenor" class="btn btn-secondary">İptal</a>
    </form>
</div>